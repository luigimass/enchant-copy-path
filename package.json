{
  "name": "enchant-copy-path",
  "displayName": "Enchant Copy Path",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "enchantCopyPath.copyPath",
        "title": "Enchant: Copy Path with Prefix"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "enchantCopyPath.copyPath",
          "when": "resourceScheme == 'file'",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Enchant Copy Path Configuration",
      "properties": {
        "enchantCopyPath.commandPrefix": {
          "type": "string",
          "enum": ["nano", "vim", "less", "code"],
          "default": "nano",
          "description": "Command to prepend to the file path (e.g., nano, vim, code)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
